<h1>New Attraction</h1>

<%= form_for @attraction do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :min_height, "Minimum Height" %><br>
    <%= f.number_field :min_height %><br>
    <%= f.label :happiness_rating, "Happiness Rating" %><br>
    <%= f.number_field :happiness_rating %><br>
    <%= f.label :nausea_rating %><br>
    <%= f.number_field :nausea_rating %><br>
    <%= f.label :tickets, "How many tickets to ride?" %><br>
    <%= f.number_field :tickets %><br>

    <%= f.submit %>
<% end %>